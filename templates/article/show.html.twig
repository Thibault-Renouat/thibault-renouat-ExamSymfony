{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article {{ article.titre }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Image</th>
            <td><img src="{{ asset('assets/uploads/')~article.image }}" alt="photo de l'article" width="75px"></td>
        </tr>

        <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">Retour aux articles</a><br>
    <hr>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
